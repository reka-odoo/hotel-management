<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hotel_list_action" model="ir.actions.act_window">
            <field name="name">Hotel List</field>
            <field name="res_model">hotel.management</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="hotel_customer_list_action" model="ir.actions.act_window">
            <field name="name">Customer List</field>
            <field name="res_model">hotel.management.customer</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="hotel_staff_list_action" model="ir.actions.act_window">
            <field name="name">Staff List</field>
            <field name="res_model">hotel.management.staff</field>
            <field name="view_mode">tree,form</field>
        </record>
       
        <record id="hotel_management_tree" model="ir.ui.view">
            <field name="name">Hotel Management Tree</field>
            <field name="model">hotel.management</field>
            <field name="arch" type="xml">
                <tree expand="1">
                    <field name="name"/>
                    <field name="hotel_description"/>
                    <field name="hotel_contact_number"/>
                    <field name="hotel_address"/>
                    <!-- <field name="hotel_menu" optional="hide"/> -->
                    <field name="hotel_type" optional="hide"/>
                    <field name="postcode" optional="hide"/>
                </tree>
            </field>
        </record>
        <record id="hotel_management_form" model="ir.ui.view">
            <field name="name">Hotel management Form</field>
            <field name="model">hotel.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <lable for="name">Hotel Name</lable>
                        <h1>
                            <field name="name"></field>
                        </h1>
                        <group>
                            <group>
                                <field name="hotel_contact_number"/>
                                <field name="hotel_address"/>
                                <field name="postcode"/>
                                <!-- <field name="hotel_timing"/> -->
                            </group>
                            <group>
                                <field name="hotel_type"/>
                                <field name="hotel_email"/>
                                <field name="hotel_cuisine_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="hotel_description"/>
                            </page>
                            <page string="Restaurant">
                                <group>
                                    <group>
                                        <field name="restaurant"/>

                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>