<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hotel_management_food_tree" model="ir.ui.view">
            <field name="name">Hotel Management Food Tree</field>
            <field name="model">hotel.management.food</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="food_items"/>
                    <field name="food_price"/>
                    <field name="hotel_cuisine_ids"/>
                </tree>
            </field>
        </record>
        <record id="hotel_management_food_form" model="ir.ui.view">
            <field name="name">Hotel Management Food Form</field>
            <field name="model">hotel.management.food</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <lable for="food_items">Food Item</lable>
                        <h1>
                            <field name="food_items"></field>
                        </h1>
                        <group>
                            <group>
                                <field name="food_price"/>
                            </group>
                            <group>
                                <field name="hotel_cuisine_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
