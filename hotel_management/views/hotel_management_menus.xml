<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hotel_list_action" model="ir.actions.act_window">
        <field name="name">Hotel List</field>
        <field name="res_model">hotel.management</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="hotel_orders_list_action" model="ir.actions.act_window">
        <field name="name">Orders List</field>
        <field name="res_model">hotel.management.orders</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="hotel_staff_list_action" model="ir.actions.act_window">
        <field name="name">Staff List</field>
        <field name="res_model">hotel.management.staff</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- <record id="hotel_food_list_action" model="ir.actions.act_window">
        <field name="name">Food List</field>
        <field name="res_model">hotel.management.food</field>
        <field name="view_mode">tree,form</field>
    </record> -->
    <record id="hotel_chef_list_action" model="ir.actions.act_window">
        <field name="name">Chef List</field>
        <field name="res_model">hotel.management.chef</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="hotel_cuisine_list_action" model="ir.actions.act_window">
        <field name="name">Cuisine List</field>
        <field name="res_model">hotel.management.cuisine</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="hotel_kitchen_orders_list_action" model="ir.actions.act_window">
        <field name="name">Kitchen Orders List</field>
        <field name="res_model">hotel.management.kitchen</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hotel_root" name="Hotel Management">
        <menuitem id="hotel_menu" name="Hotel">
            <menuitem id="hotel_list" action="hotel_list_action" />
        </menuitem>
        <menuitem id="hotel_orders_menu" name="Orders">
            <menuitem id="hotel_orders_list" action="hotel_orders_list_action"/>
        </menuitem>
        <menuitem id="hotel_employee_menu" name="Employee">
            <menuitem id="hotel_staff_list" action="hotel_staff_list_action"/>
            <menuitem id="hotel_chef_list" action="hotel_chef_list_action"/>
        </menuitem>
        <menuitem id="hotel_cuisine_menu" name="Cuisine">
            <menuitem id="hotel_cuisine_list" action="hotel_cuisine_list_action"/>
        </menuitem>
        <menuitem id="hotel_kitchen_menu" name="Kitchen">
            <menuitem id="hotel_kitchen_orders_list" action="hotel_kitchen_orders_list_action"/>
        </menuitem>
    </menuitem>
</odoo>
