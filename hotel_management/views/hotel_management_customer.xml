<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hotel_management_customer_tree" model="ir.ui.view">
            <field name="name">Hotel Management Customer Tree</field>
            <field name="model">hotel.management.customer</field>
            <field name="arch" type="xml">
                <tree expand="1">
                    <field name="customer_name"/>
                    <field name="customer_mobile_number"/>
                    <field name="date"/>
                    <field name="table_number"/>
                    <field name="bill"/>
                </tree>
            </field>
        </record>
        <record id="hotel_management_customer_form" model="ir.ui.view">
            <field name="name">Hotel Management Customer Form</field>
            <field name="model">hotel.management.customer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <lable for="customer_name">Customer Name</lable>
                        <h1>
                            <field name="customer_name"></field>
                        </h1>
                        <group>
                            <group>
                                <field name="customer_mobile_number"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="table_number"/>
                                <field name="bill"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>